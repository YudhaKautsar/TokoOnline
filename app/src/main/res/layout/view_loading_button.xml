<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_button_oval_primary"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:minWidth="@dimen/space_x15"
    android:minHeight="@dimen/space_x6"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/space_x1_half"
    android:paddingRight="@dimen/space">

    <TextView
        android:id="@+id/txt_label"
        style="@style/TextAppearance.App.TextInputLayout.TTCommons.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"
        android:visibility="visible"
        tools:text="button" />

    <TextView
        android:id="@+id/txt_sub_label"
        style="@style/TextAppearance.App.TextView.H5.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="sub_info" />

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleSmallInverse"
        android:layout_width="@dimen/space_x2_half"
        android:layout_height="@dimen/space_x2_half"
        android:layout_marginLeft="@dimen/space"
        android:layout_toRightOf="@+id/txt_label"
        android:indeterminateTint="@color/white"
        android:visibility="gone" />

</LinearLayout>